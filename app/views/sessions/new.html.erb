<section class="todoapp">
    <header class="header">
        <h1>Log In</h1>
        <%= form_tag(sessions_path) do %> 
            <%= text_field_tag :email, '', :class => "new-todo", :placeholder => "Enter your e-mail." %>
            <%= text_field_tag :password, '', :class => "new-todo", :placeholder => "Enter your password." %>
            <%= submit_tag %>
        <% end %> 

        <%= link_to "Login via GitHub", "/auth/github" %> 

        <p><%= link_to "Not signed up yet? Click here!", "/users/new" %></p>
    </header>

    <footer class="footer">
    </footer>
</section> 